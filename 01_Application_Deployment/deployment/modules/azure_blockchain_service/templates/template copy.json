{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": 
    {
        "name": {
            "defaultValue": "micronike",
            "type": "String"
        }
        ,  "location": {
            "defaultValue": "westus2",
            "type": "String"
        }
        ,  "sku": {
            "defaultValue": "S0",
            "type": "String"
        }
        ,  "abs_tier": {
            "defaultValue": "Standard",
            "type": "String"
        }
        ,  "abs_password": {
        
            "type": "String"
        }
        ,  "consortiumManagementAccountPassword": {
            "type": "String"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Blockchain/blockchainMembers",
            "apiVersion": "2018-06-01-preview",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "[parameters('abs_tier')]"
            },
            "kind": "Quorum",
            "properties": {
                "validatorNodesSku": {
                    "capacity": 2
                },

               
                "consensus": "Default",
                "password": "[parameters('abs_password')]",

                "consortium": "cryptokicks",
                "consortiumRole": "ADMIN",
                "consortiumMemberDisplayName": "nikemember01",
                

                "protocol": "Quorum",
                "consortium": "cryptokicks",
                "consortiumManagementAccountPassword": "[parameters('consortiumManagementAccountPassword')]"
            }
        }
    ]
}